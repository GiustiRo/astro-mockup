---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Tabs from "../components/Tabs.astro";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<!-- <meta charset="UTF-8" /> -->
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Desafía a tus amigos con la Penca de Alabama Solutions">
		<!-- Add a meta tag to support ñ and special characters
			-->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap-utilities.css"
			rel="stylesheet"
			crossorigin="anonymous"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap-grid.css"
			rel="stylesheet"
			crossorigin="anonymous"
		/>
		<title>{"Penca" + title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Tabs />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);

		--brand-primary: #7e40cf;
		--brand-secondary: #d9d9d9;
		--dark-color: #121212;
		--light-color: #f6f6f6;
	}
	html,
	body {
		font-family: system-ui, sans-serif;
		background-color: var(--light-color);
		color: var(--dark-color);
		min-height: 100vh;
		max-width: 100vw;
		margin: 0;
		padding: 0;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	/* COMMON STYLES ######### */
	button{
		border: none
	}
	.pointer, button {
		cursor: pointer;
	}
	.bg-brand {
		background-color: var(--brand-primary) !important;
	}
	.bg-brand-secondary {
		background-color: var(--brand-secondary) !important;
	}

	.intro-component-anim {
		transform: translate(0px, 5px);
		animation: intro-generic-component 0.3s ease 1 forwards;
		animation-delay: var(--anim-delay);
		opacity: 0;
	}

	.intro-component-anim-side {
    transform: translate(-5px, 0px);
    animation: intro-generic-component .3s ease 1 forwards;
    animation-delay: var(--anim-delay);
    opacity: 0;
}

	@media (prefers-color-scheme: dark) {
		html,
		body {
			background-color: var(--dark-color);
			color: var(--light-color);
		}
	}

	@keyframes intro-text-anim {
		to {
			transform: translateY(0px);
		}
	}

	@keyframes intro-generic-component {
		to {
			transform: translate(0px, 0px);
			opacity: 1;
		}
	}
</style>
