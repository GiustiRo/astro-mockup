---
const iconSize = 36;
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

---

<div id="app-tabs" class="d-flex w-100 flex-row justify-content-evenly">
    <div class={currentPath === "" ? "active" : ""}>
        <a href="/" aria-label="Inicio">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                height={iconSize}
                viewBox="0 0 24 24"
                ><path
                    class="active"
                    fill="currentColor"
                    d="M10 20v-6h4v6h5v-8h3L12 3L2 12h3v8h5Z"></path></svg
            ></a
        >
    </div>
    <div class={currentPath === "penca" ? "active" : ""}>
        <a href="/penca" aria-label="Penca">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                height={iconSize}
                viewBox="0 0 24 24"
                ><path
                    fill="currentColor"
                    d="m16.93 17.12l-.8-1.36l1.46-4.37l1.41-.47l1 .75v.14c0 .07.03.13.03.19c0 1.97-.66 3.71-1.97 5.21l-1.13-.09M9.75 15l-1.37-4.03L12 8.43l3.62 2.54L14.25 15h-4.5M12 20.03c-.88 0-1.71-.14-2.5-.42l-.69-1.51l.66-1.1h5.11l.61 1.1l-.69 1.51c-.79.28-1.62.42-2.5.42m-6.06-2.82c-.53-.62-.99-1.45-1.38-2.46c-.39-1.02-.59-1.94-.59-2.75c0-.06.03-.12.03-.19v-.14l1-.75l1.41.47l1.46 4.37l-.8 1.36l-1.13.09M11 5.29v1.4L7 9.46l-1.34-.42l-.42-1.36C5.68 7 6.33 6.32 7.19 5.66s1.68-1.09 2.46-1.31l1.35.94m3.35-.94c.78.22 1.6.65 2.46 1.31c.86.66 1.51 1.34 1.95 2.02l-.42 1.36l-1.34.43l-4-2.77V5.29l1.35-.94m-9.42.58C3 6.89 2 9.25 2 12s1 5.11 2.93 7.07S9.25 22 12 22s5.11-1 7.07-2.93S22 14.75 22 12s-1-5.11-2.93-7.07S14.75 2 12 2S6.89 3 4.93 4.93Z"
                ></path></svg
            >
        </a>
    </div>
    <div class={currentPath === "grupos" ? "active" : ""}>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            height={iconSize}
            viewBox="0 0 24 24"
            ><path
                fill="currentColor"
                d="M7.2 11.2c1.77 0 3.2 1.43 3.2 3.2c0 1.77-1.43 3.2-3.2 3.2c-1.77 0-3.2-1.43-3.2-3.2c0-1.77 1.43-3.2 3.2-3.2m7.6 4.8a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1 2-2m.4-12A4.8 4.8 0 0 1 20 8.8c0 2.65-2.15 4.8-4.8 4.8a4.8 4.8 0 0 1-4.8-4.8c0-2.65 2.15-4.8 4.8-4.8Z"
            ></path></svg
        >
    </div>
    <div class={currentPath === "perfil" ? "active" : ""}>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            height={iconSize}
            viewBox="0 0 24 24"
            ><path
                fill="currentColor"
                d="M12 19.2c-2.5 0-4.71-1.28-6-3.2c.03-2 4-3.1 6-3.1s5.97 1.1 6 3.1a7.232 7.232 0 0 1-6 3.2M12 5a3 3 0 0 1 3 3a3 3 0 0 1-3 3a3 3 0 0 1-3-3a3 3 0 0 1 3-3m0-3A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10c0-5.53-4.5-10-10-10Z"
            ></path></svg
        >
    </div>
</div>
<style>
    #app-tabs {
        position: fixed;
        bottom: 0;
        /* background-color: red; */
        padding-block: 12px;
        z-index: 999;
        background-color: #1f1f1f;
    }
    svg {
        cursor: pointer;
    }
    svg path {
        fill: #ffffff97;
    }
    div:is(.active)  path{
        fill: var(--brand-primary);
    }
    svg:hover path {
        fill: var(--brand-primary);
    }
</style>
