---
export interface Props {
	title: string;
	body: string;
	href: string;
	extra?: string;
}
const { href, title, body, extra } = Astro.props;
---

<div
	class="card text-bg-dark my-3 my-md-4 banner-wrap pointer intro-component-anim"
	style="--anim-delay: .{{0}}s"
>
	<!-- <img src="../../../assets/images/generic_penca_banner.png" class="card-img" alt=""> -->
	<div class="card-img-overlay banner-bg p-0 d-flex col-12">
		<div class="g-0 w-100 d-flex flex-row p-md-4" style="max-height: 100%;">
			<div
				class="col-4 col-md-3 justify-content-center d-flex align-items-center ps-3 penca-icon"
			>
				<img
					src="public/images/cl.png"
					class="img-fluid rounded-start"
					alt="..."
				/>
			</div>
			<div class="col-8 col-md-9 text-center">
				<div
					class="card-body p-0 ps-3 h-100 overflow-hidden d-flex flex-column justify-content-center"
				>
					<div><!-- pills--></div>
					<div
						class="text-black d-flex flex-column flex-md-row banner-text gap-md-5 justify-content-md-center"
					>
						<span class="mb-0 fw-bold">+15k Miembros</span>
						<span class="mb-0 fw-bold">+5k Grupos</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<style>
	.card {
		border-radius: 12px;
		height: clamp(130px, 20vh, 200px);
		transition: 0.3s;
		/* transform: translate(0px, 10px); */
	}
	.card:hover {
		/* transform: translate(10px, 0px); */
	}
	.card-img-overlay {
		height: clamp(130px, 20vh, 200px);
	}
	.banner-wrap {
		background-color: var(--light-color) !important;

	}
	.banner-bg {
		border-radius: inherit;
		background-image: url("public/images/generic_penca_banner.png");
		/* background-image: url("../../../../assets/images/generic_penca_banner.png"); */
		background-repeat: no-repeat;
		background-size: cover;
	}

	.penca-icon {
		height: 100%;
	}
	.penca-icon img {
		max-height: 100%;
	}

	.banner-text {
		font-size: clamp(14px, 5vw, 28px);
	}
