        el: {
            name: "Uruguay",
            score: 2,
            flag: "https://s3.sa-east-1.amazonaws.com/sm-pwa-dev.alabamasolutions.com/penca/equipos/uy.svg",
        },
        ev: {
            name: "Suiza",
            score: 1,
            flag: "https://s3.sa-east-1.amazonaws.com/sm-pwa-dev.alabamasolutions.com/penca/equipos/ch.svg",
        },
        isOpen: false,
        status: "FINALIZADO",
