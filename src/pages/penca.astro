const title = "Alabama Solutions";
import PencaCard from "../components/penca/Penca-Card.astro";
---

<Layout title={title + "."}>
    <div class="d-flex flex-column h-100 px-md-5" style="margin-top: 50px">
        <!-- GROUP -->
        <div
            class="p-3 d-flex flex-row text-center align-items-center col-12 col-md-auto m-auto mt-3 pt-3 pointer"
        >
            <div class="col-auto px-4 align-items-center d-flex">
                <h2 class="m-0">Grupo:</h2>
            </div>
            <span class="col-8 text-start">
                <span> Copa Mundo! </span>
            </span>
        </div>
        <!-- FECHAS -->
        <div class="col-12 d-flex flex-row position-relative my-3">
            <div
                class="col-12 d-flex flex-row flex-no-wrap overflow-auto fechas-scrollbox px-2 position-relative justify-content-md-center gap-2 gap-md-4"
            >
                {
                    fechas.map((fecha, i_f) => {
                        return (
                            <button
                                class:list={[
                                    "fecha-button intro-component-anim-side",
                                    { "bg-brand text-light": fecha.selected },
                                ]}
                                style={"--anim-delay: ." + (i_f - 2) + "s"}
                            >
                                <span class="fw-semibold"> {fecha.name}</span>
                            </button>
                        );
                    })
                }
            </div>
            <div class="fechas-overlay fechas-overlay-right"></div>
            <div class="fechas-overlay fechas-overlay-left"></div>
        </div>
        <div
            class="d-flex flex-column align-items-center gap-4 flex-md-row flex-md-wrap gap-md-3 p-3 p-md-2 mt-1 mb-5 justify-content-center"
        >
            {
                events.map((event) => {
                    event.status = event.status.toLowerCase();
                    return <PencaCard penca_event={event} />;
                })
            }
        </div>
    </div>
</Layout>

<style>
    .fechas-scrollbox,
    .fechas-scrollbox::-webkit-scrollbar {
        display: none;
        -ms-overflow-style: none;
        /* IE and Edge */
        scrollbar-width: none;
        /* Firefox */
    }

    .fecha-button,
    .fecha-button::part(native) {
        border-radius: 8px !important;
        padding: 12px 18px;
    }

    .fechas-overlay {
        height: 100%;
        position: absolute;
        width: 30px;
        z-index: 2;
    }
    .fechas-overlay-left {
        left: -3px;
        background: linear-gradient(90deg, var(--light-white), transparent);
    }

    .fechas-overlay-right {
        right: 0px;
        background: linear-gradient(270deg, var(--light-white), transparent);
    }

    @media (prefers-color-scheme: dark) {
        .fechas-overlay-left {
            background: linear-gradient(90deg, var(--dark-color), transparent);
        }
        .fechas-overlay-right {
            background: linear-gradient(270deg, var(--dark-black), transparent);
        }
    }
</style>
